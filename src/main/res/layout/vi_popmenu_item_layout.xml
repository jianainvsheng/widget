<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vi_popmenu_item_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    tools:ignore="ResourceName">
    <!--item的icon-->
    <ImageView
        android:id="@+id/vi_popmenu_icon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp" />

    <!--item的未读消息数量-->
    <TextView
        android:id="@+id/vi_popmenu_notice_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="12sp" />

    <!--item的标题-->
    <TextView
        android:id="@+id/vi_popmenu_pw_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/vi_popmenu_notice_tag"
        android:layout_toRightOf="@id/vi_popmenu_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>
