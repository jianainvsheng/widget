<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_title"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/title_bar_title_height"
    android:gravity="center_vertical"
    tools:ignore="ResourceName">

    <LinearLayout
        android:id="@+id/title_bar_middle_ll"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_bar_title_height"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        />

    <LinearLayout
        android:id="@+id/title_bar_left_ll"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_bar_title_btn_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        />


    <LinearLayout
        android:id="@+id/title_bar_right_ll"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_bar_title_btn_height"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        />


    <View
        android:id="@+id/title_line"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_bar_line_hight"
        android:layout_alignParentBottom="true"
        android:background="@color/title_bar_line_color"
        android:visibility="gone"/>

</RelativeLayout>