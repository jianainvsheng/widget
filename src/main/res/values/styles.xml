<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="bu_appcompat_theme_FFFFFF" parent="@style/Theme.AppCompat.Light.NoActionBar" tools:ignore="ResourceName">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/the_color_FFFFFF</item>
        <item name="android:windowAnimationStyle">@style/app_activity_translate_anim</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="bu_appcompat_theme_grey" parent="@style/Theme.AppCompat.Light.NoActionBar" tools:ignore="ResourceName">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/the_theme_bg_color</item>
    </style>
    <style name="bu_appcompat_theme_transparent" parent="@style/Theme.AppCompat.Light.NoActionBar" tools:ignore="ResourceName">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/bu_transparent</item>
    </style>
    <style name="app_activity_translate_anim" tools:ignore="ResourceName">
        <item name="android:activityOpenEnterAnimation">@anim/app_window_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/app_window_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/app_window_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/app_window_close_exit</item>
    </style>
    <declare-styleable name="TitleBar" tools:ignore="ResourceName">

        <attr name="title_showUnderline" format="boolean"/>

        <attr name="title_leftViewVisiable" format="boolean"/>
        <attr name="title_useDefaultLeftBackView" format="boolean" />
        <attr name="title_leftCustomView" format="reference" />

        <attr name="title_middleViewVisiable" format="boolean"/>
        <attr name="title_titleName" format="string" />
        <attr name="title_titleFontSize" format="dimension" />
        <attr name="title_titleFontColor" format="color" />
        <attr name="title_titleCustomView" format="reference" />

        <attr name="title_rightViewVisiable" format="boolean"/>
        <attr name="title_rightLableName" format="string" />
        <attr name="title_rightLableFontSize" format="dimension" />
        <attr name="title_rightlableFontColor" format="color" />
        <attr name="title_rightCustomView" format="reference" />

    </declare-styleable>



    <style name="widget_gu_orderlist_fillet_label_red_start" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/gu_fillet_label_red_start_background</item>
    </style>
    <style name="widget_gu_orderlist_fillet_label_red_end" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:textColor">@color/widget_gu_orderlist_color_F20C59</item>
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:background">@drawable/fillet_label_red_end_background</item>
    </style>

    <style name="widget_gu_orderlist_Gome.Button.StrokeGray.Style" parent="widget_gu_orderlist_Gome.Button.Style">
        <item name="android:background">@drawable/gu_common_btn_bg_3_selector</item>
        <item name="android:textColor">#5A6066</item>
    </style>

    <style name="widget_gu_orderlist_Gome.Button.History.Style" parent="widget_gu_orderlist_Gome.Button.Style">
        <item name="android:background">@drawable/gu_common_btn_bg_2_selector</item>
        <item name="android:textColor">#5A6066</item>
    </style>

    <style name="widget_gu_orderlist_Gome.Button.Style" parent="@android:style/Widget.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="jz_style_dialog_progress" parent="@android:style/Theme.Dialog" tools:ignore="ResourceName">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/jz_popup_toast_anim</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="jz_popup_toast_anim" parent="@android:style/Animation" tools:ignore="ResourceName">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!-- 所有输入框edittext-style -->
    <style name="login_input_style" tools:ignore="ResourceName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/login_input_bg</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/main_default_black_text_color</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
    </style>
    <!-- 所有输入框edittext-style -->
    <style name="login_input_style_new" tools:ignore="ResourceName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/main_default_black_text_color</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
    </style>
    <!-- 图形验证码captcha-style -->
    <style name="login_picture_captcha_style" tools:ignore="ResourceName">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:background">#00acff</item>
    </style>

    <style name="Widget.MaterialRatingBar.RatingBar" parent="android:Widget.RatingBar">
        <!--
        Disabled for correct behavior on Android 4.x, see
        https://github.com/android/platform_frameworks_base/commit/911743652b597057a1bd7ef8a921e9ff8dce0f4a#diff-149f45c5ff2d3185bb79688ba17bc432L536
        <item name="android:progressDrawable">@null</item>
        -->
        <item name="android:indeterminateDrawable">@null</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:maxHeight">36dp</item>
    </style>

    <style name="Widget.MaterialRatingBar.RatingBar.Small">
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

    <style name="Widget.MaterialRatingBar.RatingBar.Indicator">
        <item name="android:isIndicator">true</item>
    </style>

    <style name="Widget.MaterialRatingBar.RatingBar.Indicator.Small">
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

    <style name="custom_dialog2" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否漂现在activity上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 去除黑色边框的关键设置项 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 屏幕背景是否变暗 -->
        <item name="android:backgroundDimAmount">0.3</item>
    </style>

    <style name="picker_view_scale_anim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pickerview_dialog_scale_in</item>
        <item name="android:windowExitAnimation">@anim/pickerview_dialog_scale_out</item>
    </style>


    <style name="picker_view_slide_anim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pickerview_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/pickerview_slide_out_bottom</item>
    </style>

</resources>
